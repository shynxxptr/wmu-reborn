    <div class="container">

        <% if (activeTab==='roles' ) { %>
            <div class="card glass-panel shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Active Roles (<%= roleData.length %>)</h6>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover mb-0 align-middle">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Role Info</th>
                                    <th>Owner</th>
                                    <th>Sisa Waktu (Real-time)</th>
                                    <th>Nebeng (Shared)</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% roleData.forEach(r=> { %>
                                    <tr>
                                        <td>
                                            <span class="badge rounded-pill role-badge"
                                                data-role-color="<%= r.roleColor %>"
                                                style="color: #fff; text-shadow: 0 0 2px #000;">
                                                <%= r.roleName %>
                                            </span>
                                            <div class="small text-muted mt-1" style="font-size: 0.75rem;">ID: <%=
                                                    r.roleId %>
                                            </div>
                                        </td>
                                        <td>
                                            <strong>
                                                <%= r.ownerName %>
                                            </strong>
                                        </td>
                                        <td>
                                            <span class="countdown"
                                                data-expires="<%= r.expiresAt %>">Calculating...</span>
                                            <div class="small text-muted">
                                                <%= new Date(r.expiresAt).toLocaleString('id-ID') %>
                                            </div>
                                        </td>
                                        <td>
                                            <% if(r.sharedUsers.length> 0) { %>
                                                <% r.sharedUsers.forEach(user=> { %>
                                                    <span class="badge bg-secondary mb-1">
                                                        <%= user %>
                                                    </span>
                                                    <% }) %>
                                                        <% } else { %>
                                                            <span class="text-muted small">-</span>
                                                            <% } %>
                                        </td>
                                        <td class="text-end">
                                            <button class="btn btn-sm btn-outline-warning me-1"
                                                onclick="openTimeModal('<%= r.roleId %>', '<%= r.roleName %>')">
                                                ‚è±Ô∏è Atur Waktu
                                            </button>
                                            <form action="/api/delete-role" method="POST" class="d-inline"
                                                onsubmit="return confirm('Hapus paksa role ini?');">
                                                <input type="hidden" name="roleId" value="<%= r.roleId %>">
                                                <button class="btn btn-sm btn-outline-danger">üóëÔ∏è</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <% } %>

                <% if (activeTab==='stocks' ) { %>
                    <div class="row g-3">
                        <% stocks.forEach(s=> { %>
                            <div class="col-md-4">
                                <div class="card glass-panel h-100 border-secondary">
                                    <div class="card-header fw-bold text-warning d-flex justify-content-between">
                                        <span>
                                            <%= TIKET_CONFIG[s.jenis_tiket].label %>
                                        </span>
                                        <span class="badge bg-dark border border-secondary">
                                            <%= s.jenis_tiket %>
                                        </span>
                                    </div>
                                    <div class="card-body">
                                        <form action="/api/update-stock" method="POST">
                                            <input type="hidden" name="jenis" value="<%= s.jenis_tiket %>">

                                            <div class="row g-2 mb-2">
                                                <div class="col-6">
                                                    <label class="small text-muted">Kuota</label>
                                                    <input type="number" name="max_stock"
                                                        class="form-control form-control-sm bg-dark text-white"
                                                        value="<%= s.max_stock %>">
                                                </div>
                                                <div class="col-6">
                                                    <label class="small text-muted">Nilai (Angka)</label>
                                                    <input type="number" name="price_value"
                                                        class="form-control form-control-sm bg-dark text-white"
                                                        value="<%= s.price_value %>">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="small text-muted">Label Harga</label>
                                                <input type="text" name="price_text"
                                                    class="form-control form-control-sm bg-dark text-white"
                                                    value="<%= s.price_text %>">
                                            </div>
                                            <button type="submit"
                                                class="btn btn-success btn-sm w-100 mb-2">Simpan</button>
                                        </form>
                                        <form action="/api/reset-stock" method="POST"
                                            onsubmit="return confirm('Reset terjual ke 0?');">
                                            <input type="hidden" name="jenis" value="<%= s.jenis_tiket %>">
                                            <button class="btn btn-outline-danger btn-sm w-100">Reset Terjual</button>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center small">
                                        Sold: <b class="text-white">
                                            <%= s.sold %>
                                        </b> | Sisa: <b
                                            class="<%= (s.max_stock-s.sold)<=0?'text-danger':'text-success'%>">
                                            <%= s.max_stock - s.sold %>
                                        </b>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                    <% } %>

