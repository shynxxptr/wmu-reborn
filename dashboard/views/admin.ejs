                                            <th class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (topUsers && topUsers.length > 0) { %>
                                            <% topUsers.forEach((u, i) => { %>
                                                <tr>
                                                    <td><strong>#<%= i + 1 %></strong></td>
                                                    <td><%= u.username %></td>
                                                    <td class="text-end"><%= u.mainBalance.toLocaleString('id-ID') %></td>
                                                    <td class="text-end"><%= u.bankBalance.toLocaleString('id-ID') %></td>
                                                    <td class="text-end"><strong><%= u.total.toLocaleString('id-ID') %></strong></td>
                                                </tr>
                                            <% }); %>
                                        <% } else { %>
                                            <tr><td colspan="5" class="text-center text-muted">No data</td></tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>

        <!-- USER MANAGEMENT -->
        <% if (activeTab === 'users') { %>
            <div class="card glass-panel mb-4">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">üîç Search User</h6>
                </div>
                <div class="card-body">
                    <form method="GET" action="/users" class="d-flex gap-2">
                        <input type="text" name="search" class="form-control bg-dark text-white" placeholder="User ID atau Username..." value="<%= search || '' %>">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                </div>
            </div>

            <% if (users && users.length > 0) { %>
                <div class="card glass-panel">
                    <div class="card-header bg-info text-white">
                        <h6 class="mb-0">üë§ User Results (<%= users.length %>)</h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-dark table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th class="text-end">Main Balance</th>
                                        <th class="text-end">Bank</th>
                                        <th class="text-end">Loan</th>
                                        <th>Status</th>
                                        <th class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(u => { %>
                                        <tr>
                                            <td>
                                                <strong><%= u.username %></strong><br>
                                                <small class="text-muted"><%= u.userId %></small>
                                            </td>
                                            <td class="text-end"><%= u.balance.toLocaleString('id-ID') %></td>
                                            <td class="text-end"><%= u.bankBalance.toLocaleString('id-ID') %></td>
                                            <td class="text-end"><%= u.loan > 0 ? u.loan.toLocaleString('id-ID') : '-' %></td>
                                            <td>
                                                <% if (u.isJailed) { %>
                                                    <span class="badge bg-danger">üîí Jailed</span>
                                                <% } %>
                                                <% if (u.penalty !== 0) { %>
                                                    <span class="badge bg-warning">‚ö†Ô∏è Penalty: <%= u.penalty %>%</span>
                                                <% } %>
