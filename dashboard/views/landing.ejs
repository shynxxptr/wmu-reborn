    <script>
        function toggleMobileMenu() { const e = document.getElementById('mobile-menu'); e.classList.toggle('active') }
        const initLanding = () => {
            const p = document.querySelector('.parallax-city');
            window.addEventListener('scroll', () => { const e = window.scrollY; p && p.style.setProperty('transform', `translateY(${e * 0.06}px) scale(1.1)`) })
            document.querySelectorAll('.tilt-card').forEach(t => { t.addEventListener('mousemove', e => { const r = t.getBoundingClientRect(), x = e.clientX - r.left, y = e.clientY - r.top, cx = r.width / 2, cy = r.height / 2, rx = ((y - cy) / cy) * -6, ry = ((x - cx) / cx) * 6; t.style.transform = `rotateX(${rx}deg) rotateY(${ry}deg)` }); t.addEventListener('mouseleave', () => { t.style.transform = 'rotateX(0) rotateY(0)' }) })
            const io = new IntersectionObserver((entries) => { entries.forEach(en => { if (en.isIntersecting) { en.target.classList.add('active'); } }) }, { threshold: .01, rootMargin: '0px 0px -10% 0px' });
            document.querySelectorAll('.reveal').forEach(el => io.observe(el));
            document.querySelectorAll('.reveal').forEach(el => el.classList.add('active'));
        };
        if (document.readyState === 'complete') { initLanding() } else { window.addEventListener('load', initLanding) }
