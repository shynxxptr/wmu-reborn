    <style>
        :root {
            --bg-dark: #0C1E2E;
            --bg-card: #101B2F;
            --neon-cyan: #36DAFF;
            --neon-purple: #8B7CFF;
            --text-main: #E8ECF1;
            --text-muted: #8D8D8D;
            --grid-color: rgba(54, 218, 255, 0.05);
            --glass-bg: rgba(16, 27, 47, 0.7);
            --glass-border: 1px solid rgba(54, 218, 255, 0.2);
            --glow-shadow: 0 0 15px rgba(54, 218, 255, 0.3);
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-main);
            font-family: 'Inter', sans-serif;
            background-image:
                linear-gradient(var(--grid-color) 1px, transparent 1px),
                linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
            background-size: 40px 40px;
        }

        h1,
        h2,
        h3 {
            font-family: 'Outfit', sans-serif;
        }

        .glass-panel {
            background: var(--glass-bg);
            backdrop-filter: blur(12px);
            border: var(--glass-border);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .glass-panel:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 40px rgba(54, 218, 255, 0.15);
        }

        .neon-text {
            text-shadow: 0 0 10px rgba(54, 218, 255, 0.5);
            animation: pulse-glow 3s ease-in-out infinite;
        }

        @keyframes pulse-glow {

            0%,
            100% {
                text-shadow: 0 0 10px rgba(54, 218, 255, 0.5);
            }

            50% {
                text-shadow: 0 0 20px rgba(54, 218, 255, 0.8);
            }
        }

        .btn-primary {
            background: linear-gradient(45deg, var(--neon-cyan), #22d3ee);
            color: #000;
            font-weight: bold;
            box-shadow: var(--glow-shadow);
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 0 25px rgba(54, 218, 255, 0.6);
        }

        .nav-link {
            position: relative;
            color: var(--text-muted);
            transition: color 0.3s;
        }

        .nav-link:hover {
            color: var(--neon-cyan);
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -4px;
            left: 0;
            background-color: var(--neon-cyan);
            transition: width 0.3s;
        }

        .nav-link:hover::after {
            width: 100%;
        }

        /* Fade-in animations */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .fade-in {
            animation: fadeIn 0.8s ease-out;
        }

        .fade-in-up {
            animation: fadeInUp 0.8s ease-out;
        }

        .delay-100 {
            animation-delay: 0.1s;
            opacity: 0;
            animation-fill-mode: forwards;
        }

        .delay-200 {
            animation-delay: 0.2s;
            opacity: 0;
            animation-fill-mode: forwards;
        }

        .delay-300 {
            animation-delay: 0.3s;
            opacity: 0;
            animation-fill-mode: forwards;
        }

        .delay-400 {
            animation-delay: 0.4s;
            opacity: 0;
            animation-fill-mode: forwards;
        }

        /* Mobile hamburger menu */
        .mobile-menu {
            display: none;
        }

        .mobile-menu.active {
            display: block;
        }

        /* Smooth scroll */
        html {
            scroll-behavior: smooth;
        }

        /* Floating animation for stats */
        @keyframes float {

            0%,
            100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .stat-card {
            animation: float 3s ease-in-out infinite;
        }

        .stat-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .stat-card:nth-child(3) {
            animation-delay: 0.4s;
        }

        .stat-card:nth-child(4) {
            animation-delay: 0.6s;
        }
    </style>
</head>

